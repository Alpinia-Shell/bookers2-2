<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
      <h2>User info</h2>
      <% if  @user.errors.any? %>
        <h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model:@user do |f| %>
        <div class="form-group">
          <label for = "user_name">Name</label>
          <%= f.text_field :name ,id:"user_name", class: "form-control" %>
        </div>

        <div class="form-group">
          <label for= "user_profile_image">Image</label></br>
          <%= f.file_field :profile_image, id:"user_profile_image", accept:'image/*'%>
        </div>

        <div class="form-group">
          <label for = "user_introduction">Introduction</label>
          <%= f.text_area :introduction ,id: "user_introduction" ,class: "form-control"%>
        </div>
        
        <%= f.submit 'Update User',class:"btn btn-secondary mt-3" %>
      <% end %>
    </div>
  </div>
</div>