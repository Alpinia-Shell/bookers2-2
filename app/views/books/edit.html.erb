<h1>Editing Book</h1>
<%= form_with model:@book do |f| %>
  <label for= "title">Title</label>
  <%= f.text_field :title ,autofocus: true , id:'title' %>
  <label for= "body">Opinion<label>
  <%= f.text_area :body ,id:'body'%>
  <%= f.submit 'Submit' %>
<% end %>

<%= link_to 'Show',book_path(@book) %> | <%= link_to 'Back',books_path %>

