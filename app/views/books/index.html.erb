<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/userinfo', user: @user %><br/>
      <%= render 'newbook',book: @book %>
    </div>
  
    <div class="col-md-8 offset-md-1">
      <h1>Book</h1>
      <table class="table"> 
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to user_path(book.user) do %> 
                    <%= image_tag book.user.get_profile_image(80,80) %>
                  <% end %>
              </td>
              <td><%= link_to book.title, book_path(book)%></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>